@model IEnumerable<LiveShow.Services.Models.User.UserDto>;

@{
    ViewData["Title"] = "Persons";
    if (User.IsInRole("Artist"))
    {
        Layout = "~/Views/Shared/_LayoutArtist.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_LayoutUser.cshtml";
    }
}

<h4 style="text-align: center; color: azure; margin-top:40px;"> Find persons</h4>


<div class="row justify-content-center">
    @foreach (var item in Model)
    {
        <div class="col-md-4" style="margin:10px;">
            <div class="card">
              
                <div class="card-body" style="text-align:center;">
                    <h4>
                        <img class="card-img-top" src="~/images/userProfile.svg" width="100" height="100"/>
                        @Html.DisplayFor(modelItem => item.FirstName)

                        @Html.DisplayFor(modelItem => item.LastName)
                    </h4>
                    @Html.DisplayFor(modelItem => item.Type)
                </div>
                <div class="card-footer" style="text-align:center;">
                    <a asp-action="Follow" asp-route-id="@item.Id">Follow</a>
                </div>
            </div>
        </div>
        <br />
    }
</div>
