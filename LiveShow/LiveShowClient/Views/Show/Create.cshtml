@model LiveShowClient.ViewModels.ShowVM;

@{
    ViewData["Title"] = "CreateShow";
    Layout = "~/Views/Shared/_LayoutArtist.cshtml";
}

<h4 style="text-align: center; margin-top: 40px; color: azure;">Create Show</h4>
<hr />
<div class="row justify-content-center">
    <div class="jumbotron">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DateTime" class="control-label text-dark"></label>
                <input asp-for="DateTime" class="form-control" />
                <span asp-validation-for="DateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Venue" class="control-label text-dark"></label>
                <input asp-for="Venue" class="form-control" />
                <span asp-validation-for="Venue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Genre" class="control-label text-dark"></label>
                <select asp-for="Genre" class="form-control" asp-items="ViewBag.Genre"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" id="button-form" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
